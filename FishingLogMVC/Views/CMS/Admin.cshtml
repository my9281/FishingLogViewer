@using FishingLog.Model
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	List<note> li = ViewBag.datalist;
}
<div class="admin-box">

	<div class="innerbox">
		<span class="title">您有 @ViewBag.Count 条信息</span>

		@if (li != null && li.Count > 0)
		{
			foreach (var item in li)
			{
				<div class="inner-section">
					<h3>[@item.nid] @item.ntitle --- from @item.nuser</h3>
					<p>@item.ntext</p> 
					<span>IP: @item.nip at @item.ntime</span>
				</div>
			}
		}
	</div>
</div>